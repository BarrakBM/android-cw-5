<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4000000"

    android:backgroundTint="#E4000000"
    tools:context=".DetailsActivity">


    <RelativeLayout
        android:id="@+id/margin2"
        android:layout_width="320dp"
        android:layout_height="530dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"


        android:layout_gravity="center"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="123dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#F3DFDEDE">

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagedetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#00303F"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagedetails2"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/breakingbad" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="177dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Seasons:"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imagedetails"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/breakingbad" />

        <TextView
            android:id="@+id/yearss"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="227dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="194dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="227dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Seasonss"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="102dp"
            android:layout_marginBottom="177dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="TextView:"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="140dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Episodes:"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/epesod"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="105dp"
            android:layout_marginBottom="140dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="TextView:"
            android:textColor="#00303F"
            android:textSize="17sp"
            android:textStyle="italic" />
    </RelativeLayout>
</RelativeLayout>